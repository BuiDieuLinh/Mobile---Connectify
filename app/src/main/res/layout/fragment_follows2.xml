<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FollowsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tất cả người theo dõi"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <!-- Cai nay de hien thi hinh anh -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gradient">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="999dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/btdl" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
                <!-- Name follower -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Name -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HuyenTrang251"
                        android:paddingLeft="10dp"
                        ></TextView>
                    <!-- Name user-->
                    <TextView
                        android:id="@+id/tvNameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HuyenTrang"
                        android:paddingLeft="10dp"
                        android:textColor="#888"></TextView>
                </LinearLayout>


                <!--Theođõi lại -->
                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Follow"
                    android:background="@drawable/border_btnfollow"
                    android:layout_gravity="center"></Button>
                <ImageView
                    android:id="@+id/imgDeleteFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_dots"
                    android:layout_marginLeft="10dp"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <!-- Cai nay de hien thi hinh anh -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gradient">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="999dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/btdl" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
                <!-- Name follower -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!-- Name -->
                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HuyenTrang251"
                        android:paddingLeft="10dp"
                        ></TextView>
                    <!-- Name user-->
                    <TextView
                        android:id="@+id/tvNameUser1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HuyenTrang"
                        android:paddingLeft="10dp"
                        android:textColor="#888"></TextView>
                </LinearLayout>


                <!--Theođõi lại -->
                <Button
                    android:id="@+id/btnFollow1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Follow"
                    android:background="@drawable/border_btnfollow"
                    android:layout_gravity="center"></Button>
                <ImageView
                    android:id="@+id/imgDeleteFriend1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_dots"
                    android:layout_marginLeft="10dp"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>